board = bld.get_board()
if board in ('snowy_bb2','snowy_dvt','snowy_emery'):
    bld.objects(
        name='board',
        source=[
            'boards/board_snowy.c',
        ],
        use=[
            'fw_includes',
            'drivers',
        ],
    )
elif board in ('spalding', 'spalding_bb2', 'spalding_gabbro'):
    bld.objects(
        name='board',
        source=[
            'boards/board_spalding_evt.c',
        ],
        use=[
            'fw_includes',
            'drivers',
        ],
    )
elif board in ('silk_bb2', 'silk', 'silk_flint'):
    bld.objects(
        name='board',
        source=[
            'boards/board_silk.c',
        ],
        use=[
            'fw_includes',
            'drivers',
        ],
    )
elif board in ('asterix'):
    bld.objects(
        name='board',
        source=[
            'boards/board_asterix.c',
        ],
        use=[
            'fw_includes',
            'freertos',
            'drivers',
        ],
    )
elif board in ('obelix_dvt', 'obelix_pvt', 'obelix_bb2'):
    bld.objects(
        name='board',
        source=[
            'boards/board_obelix.c',
        ],
        use=[
            'fw_includes',
            'freertos',
            'drivers',
        ],
    )
elif board in ('getafix_evt', "getafix_dvt"):
    bld.objects(
        name='board',
        source=[
            'boards/board_getafix.c',
        ],
        use=[
            'fw_includes',
            'freertos',
            'drivers',
        ],
    )
else:
    bld.fatal('src/fw/board/wscript_build: '
              'Unknown board {}'.format(board))

